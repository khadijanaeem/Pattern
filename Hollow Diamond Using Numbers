#include <iostream>
using namespace std;

int main() {
  int size = 5, num = 1;
  // upside pyramid
  for (int i = 1; i <= size; i++) {
    // printing spaces
    for (int j = size; j > i; j--) {
      cout << " ";
    }
    // printing number
    for (int k = 1; k < i * 2 ; k++) {
      if (k == 1 || k == 2 * i - 1) {
        cout << num++;
      } else {
        cout << " ";
      }
    }
    // set the number to 1
    num = 1;
    cout << "\n";
  }
  // downside triangle
  for (int i = 1; i < size; i++) {
    // printing spaces
    for (int j = 0; j < i; j++) {
      cout << " ";
    }
    // printing number
    for (int k = (size - i) * 2 - 1; k >= 1; k--) {
      if (k == 1 || k == (size - i) * 2 - 1) {
        cout << num++;
      } else {
        cout << " ";
      }
    }
    // set the number to 1
    num = 1;
    cout << "\n";
  }
  return 0;
}
